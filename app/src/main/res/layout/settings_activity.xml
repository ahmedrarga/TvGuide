<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/coord_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/background"
tools:context=".Account.SettingsActivity">
<include layout="@layout/activity_base"/>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    tools:context="com.example.tvguide.HomePage.HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="187dp"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="Change Name"
                android:textAlignment="textStart"
                android:textColor="@color/fui_bgGoogle"
                android:textSize="22sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/currfirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_corner_toggle"
                android:hint=" First Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="@null"
                    android:inputType="textPersonName|text"
                    android:minHeight="@dimen/dimen_20dp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/currlastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_corner_toggle"
                android:hint=" Last Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="@null"
                    android:inputType="textPersonName|text"
                    android:minHeight="@dimen/dimen_20dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="55dp"
                android:background="@drawable/round_corner"
                android:onClick="Change_Name"
                android:text="Change Name"
                android:textAllCaps="false" />


            <TextView
                android:id="@+id/text2"
                android:layout_width="270dp"
                android:layout_height="41dp"
                android:layout_marginTop="50dip"
                android:gravity="center|center_horizontal"
                android:text="Change Profile Picture"
                android:textAlignment="center"
                android:textColor="@color/fui_bgGoogle"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center|center_horizontal"
                android:text="Select profile image"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/selectPhoto"
                android:layout_width="160dp"
                android:layout_height="95dp"
                android:layout_gravity="center"
                android:background="@drawable/round_corner"
                android:onClick="selectPhoto1"
                app:srcCompat="@drawable/ic_person" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="55dp"
                android:background="@drawable/round_corner"
                android:capitalize="none"
                android:onClick="uploadPhoto1"
                android:text="Change Picture"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp" />



        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>